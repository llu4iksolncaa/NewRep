<Window x:Class="Sistema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Name="Login" Margin="300,60,300,310" Text="Логин" />
        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Name="Password" Margin="300,140,300,230" Text="Пароль" />

        <Button HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Margin="300,285,300,100" Name="Vhod" Background="White" Content="Войти" Click="Vhod_Click"/>
    </Grid>
</Window>
